{
    "files.autoSave": "afterDelay",
    "files.associations": {
        "algorithm": "cpp",
        "functional": "cpp",
        "chrono": "cpp",
        "atomic": "cpp",
        "fstream": "cpp",
        "iomanip": "cpp",
        "istream": "cpp",
