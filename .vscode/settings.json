        "APMrover2": true,
        "ArduPlane/": true,
        "ArduSub/": true,
        "build/": false,
        "docs/": true,
        "logs/": true,
        "mk/": true,
        "terrain/": true,
        "tests/": true,
        "benchmarks/":true,
        "Blimp":true,
        "Rover":true,
        "modules":true,
        "Tools":true,
        ".dir-locals.el":true,
        ".dockerignore":true,
        ".editorconfig":true,
        ".flake8":true,
        ".gitattributes":true,
        ".gitignore":true,
        ".pydevproject":true,
        ".gitmodules":true,
        ".valgrind-suppressions":true,
        ".valgrindrc":true,
        "appveyor.yml":true,
        "CODE_OF_CONDUCT.md":true,
        "COPYING.txt":true,
        "Dockerfile":true,
        "Doxyfile.in":true,
